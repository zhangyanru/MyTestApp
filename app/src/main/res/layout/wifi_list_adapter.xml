<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">
    <TextView android:id="@+id/wifi_strength"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray_333333"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="特别强"
        android:background="@color/gray_light" />

    <TextView android:id="@+id/wifi_name"
        android:layout_toRightOf="@+id/wifi_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="name"/>

    <TextView android:id="@+id/wifi_address"
        android:layout_toRightOf="@+id/wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="name"/>

    <TextView android:id="@+id/wifi_state"
        android:layout_below="@+id/wifi_name"
        android:layout_toRightOf="@+id/wifi_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_333333"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="gray"/>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_333333"/>
</RelativeLayout>